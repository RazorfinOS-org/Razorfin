#!/usr/bin/env bash

set -xeuo pipefail

rm -f \
    /tmp/homebrew-install.sh
curl \
    -L \
    --retry 5 \
    --retry-max-time 120 \
    -o /tmp/homebrew-install.sh \
    https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh


bash \
    /tmp/homebrew-install.sh
rm -f \
    /tmp/homebrew-install.sh
mkdir -p \
    ~/.bashrc.d

echo "source /usr/share/heliumos/feature/homebrew/env.sh" > ~/.bashrc.d/brewrc

echo "****************************************"
echo "--Complete--"
echo "Run 'source ~/.bashrc' or restart your terminal to start using Homebrew with 'brew'!"
